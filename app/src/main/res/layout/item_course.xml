<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_subject"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_subjcourse"
                android:text="Subject+Catalog"
                android:drawableLeft="@drawable/ic_uwaterloor"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:textSize="22sp"
                android:textColor="@color/PrimaryColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv_subjcourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Title"
                android:id="@+id/tv_title"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_below="@+id/tv_title"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:textSize="15dp"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/tv_description"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_below="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Courseid"
                android:visibility="invisible"
                android:id="@+id/tv_courseid"
                android:layout_gravity="center_horizontal" />

            <Button
                class="mdl-button mdl-button--raised mdl-button--accent"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:text="add"
                android:gravity="center"
                android:id="@+id/btn_wish"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>